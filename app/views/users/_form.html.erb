<%= bootstrap_form_with(model: @user, local: true) do |f| %>
    <%= f.alert_message "Please fix the errors below.", error_summary: false %>
    <%= f.text_field :name %>
    <%= f.email_field :email %>
    <%= f.phone_field :phone %>
    <% if @user.has_password? %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation, label: "Confirme Password" %>
    <% end %>
    <%= f.form_group do %>
    
        <% if current_user %>
                <%= f.primary "update information" %>
        <% else %>
            <%= f.primary "Sign Up"%>
        <% end %>
    <% end %>
<% end %> 