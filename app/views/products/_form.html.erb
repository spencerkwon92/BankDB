<%= bootstrap_form_with(model: [@bank, @product], local: true, layout: :horizontal, 
    label_col: "col-sm-2", control_col: "col-sm-10" ) do |f| %>
    <%= f.alert_message "please fix the derrors below.", error_summary: false %>
    <%= f.text_field :name%>
    <%= f.text_field :interest%>
    <%= f.text_field :repayment_way%>
    <%= f.text_field :period%>
    
    <br>
    <%= f.form_group do %>
        <%= f.primary @product.persisted? ? "Update Product Info" : "Register Product" %>
    <% end %>
<% end %>

